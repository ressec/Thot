<chat-command-file>

  <header>
    <company>Heliosphere Ltd.</company>
    <version>1.0</version>
    <author>Resse Christophe</author>
    <description>XML file containing definitions for some chat commands.</description>
  </header>

  <commands>

    <!-- AFK command which is a very simple command. -->
    <command>
      <group>Chat</group>
      <category>Normal</category>
      <name>afk</name>
      <description>Marks you as "Away from keyboard".</description>
      <!-- Message protocol entry associated to this command. -->
      <protocol>org.heliosphere.thot.akka.chat.protocol.ChatMessageProtocolType:STATUS_AFK</protocol>
      <aliases>
        <alias>away</alias>
      </aliases>
      <parameters></parameters> <!-- This command has no parameter. -->
    </command>

    <!-- REGISTER_USER -->
    <command>
      <group>Chat</group>
      <category>Normal</category>
      <name>register</name>
      <description>Request the registration of a user on the server.</description>
      <syntax>/register 'filter(s)'</syntax>
      <!-- Message protocol entry associated to this command. -->
      <protocol>org.heliosphere.thot.akka.chat.protocol.ChatMessageProtocolType:CHAT_CLIENT_REGISTER</protocol>
      <aliases>
        <alias>reg</alias>
      </aliases>
      <parameters>
        <parameter>
          <name>username</name>
          <description>User name to register.</description>
          <tag>-user=</tag>
          <regexp>(-user=)\s*+([a-zA-Z]++\*?)</regexp>
          <type>String</type>
          <examples>
            <example>/reg -user=albert.</example>
            <example>/reg -user=   alain.</example>
          </examples>
        </parameter>
      </parameters>
    </command>

  </commands>
  

