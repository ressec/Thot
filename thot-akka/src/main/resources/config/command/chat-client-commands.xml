<chat-command-file>

  <header>
    <company>Heliosphere Ltd.</company>
    <version>1.0</version>
    <author>Resse Christophe</author>
    <description>XML file containing definitions for some chat commands.</description>
  </header>

  <commands>

    <!-- HELP command. -->
    <command>
      <protocol>com.heliosphere.athena.base.command.protocol.DefaultCommandProtocol.HELP</protocol> <!-- Command protocol enumerated value -->
      <processor>HelpCommandProcessor</processor>
      <name>help</name>
      <description>Display help on commands.</description>
      <aliases>
        <alias>h</alias>
      </aliases>
      <parameters>
        <parameter>
          <name>category</name>
          <description>Display the available command categories.</description>
          <tag>-cat</tag>
          <regexp>(-cat)</regexp>
          <type>String</type>
          <examples>
            <example>/help -cat</example>
          </examples>
        </parameter>
        <parameter>
          <name>set</name>
          <description>Display a list of available commands for a given command category.</description>
          <tag>-set</tag>
          <regexp>(-set=)\s*+([a-zA-Z]++\*?)</regexp>
          <type>String</type>
          <examples>
            <example>/help -set=system</example>
            <example>/help -set=normal</example>
            <example>/help -set=chat</example>
          </examples>
        </parameter>
        <parameter>
          <name>name</name>
          <description>Display detailed description on a given command name.</description>
          <tag>-name</tag>
          <regexp>(-name=)\s*+([a-zA-Z]++\*?)</regexp>
          <type>String</type>
          <examples>
            <example>/help -name=help</example>
            <example>/help -name=user</example>
            <example>/help -name=room</example>
          </examples>
        </parameter>
      </parameters>
    </command>

    <!-- AFK command. -->
    <command>
      <protocol>com.heliosphere.athena.base.command.protocol.DefaultCommandProtocol.AFK</protocol> <!-- Command protocol enumerated value -->
      <processor></processor> <!-- This command has no pre-defined command processor, it will be handled by a message -->
      <name>afk</name>
      <description>Mark you as: "Away from keyboard".</description>
      <aliases>
        <alias>away</alias>
      </aliases>
      <parameters></parameters> <!-- This command has no parameter! -->
    </command>

    <!-- SAY command. -->
    <command>
      <protocol>org.heliosphere.thot.akka.chat.client.command.ChatCommandProtocol.SAY</protocol> <!-- Command protocol enumerated value -->
      <processor></processor> <!-- This command has no pre-defined command processor, it will be handled by a message -->
      <name>say</name>
      <description>Says a text in a room.</description>
      <aliases>
        <alias>tell</alias>
      </aliases>
      <parameters>
        <parameter>
          <name>text</name>
          <description>Text of the say command.</description>
          <tag>-text</tag>
          <regexp>(-text=)\s*+(.++\*?)</regexp>
          <type>String</type>
          <examples>
            <example>/say -text=Hi guys ... happy to be there with you :)</example>
          </examples>
        </parameter>
      </parameters>
    </command>

    <!-- USER command. -->
    <command>
      <protocol>org.heliosphere.thot.akka.chat.client.command.ChatCommandProtocol.USER</protocol> <!-- Command protocol enumerated value -->
      <processor></processor> <!-- This command has no pre-defined command processor, it will be handled by a message -->
      <name>user</name>
      <description>Command used to manipulate a user.</description>
      <aliases></aliases>
      <parameters>
        <parameter>
          <name>register</name>
          <description>Registers a user against the chat system.</description>
          <tag>-register</tag>
          <regexp>(-register=)\s*+([a-zA-Z]++\*?)</regexp>
          <type>String</type>
          <examples>
            <example>/user -register=alan</example>
          </examples>
        </parameter>
        <parameter>
          <name>list</name>
          <description>List users present in a room (must have joined the room first).</description>
          <tag>-list</tag>
          <regexp>(-list)</regexp>
          <type>String</type>
          <examples>
            <example>/user -list</example>
          </examples>
        </parameter>
        <parameter>
          <name>unregister</name>
          <description>Un-registers the current user from the chat system.</description>
          <tag>-unregister</tag>
          <regexp>(-unregister)</regexp>
          <type>String</type>
          <examples>
            <example>/user -unregister</example>
          </examples>
        </parameter>
      </parameters>
    </command>

    <!-- LOBBY command. -->
    <command>
      <protocol>org.heliosphere.thot.akka.chat.client.command.ChatCommandProtocol.LOBBY</protocol> <!-- Command protocol enumerated value -->
      <processor></processor> <!-- This command has no pre-defined command processor, it will be handled by a message -->
      <name>lobby</name>
      <description>Command used to manipulates a lobby.</description>
      <aliases></aliases>
      <parameters>
        <parameter>
          <name>list</name>
          <description>Lists the avaialble lobbies.</description>
          <tag>-list</tag>
          <regexp>(-list)</regexp>
          <type>String</type>
        </parameter>
        <parameter>
          <name>create</name>
          <description>Creates a new lobby given its locale ISO country code.</description>
          <tag>-create</tag>
          <regexp>(-create=)\s*+([a-zA-Z]++\*?)</regexp>
          <type>String</type>
        </parameter>
        <parameter>
          <name>delete</name>
          <description>Deletes a lobby given its locale ISO country code.</description>
          <tag>-delete</tag>
          <regexp>(-delete=)\s*+([a-zA-Z]++\*?)</regexp>
          <type>String</type>
        </parameter>
        <parameter>
          <name>join</name>
          <description>Joins a lobby given its locale ISO country code.</description>
          <tag>-join</tag>
          <regexp>(-join=)\s*+([a-zA-Z]++\*?)</regexp>
          <type>String</type>
        </parameter>
        <parameter>
          <name>leave</name>
          <description>Leaves a lobby given its locale ISO country code.</description>
          <tag>-leave</tag>
          <regexp>(-leave=)\s*+([a-zA-Z]++\*?)</regexp>
          <type>String</type>
        </parameter>
      </parameters>
    </command>

    <!-- ROOM command. -->
    <command>
      <protocol>org.heliosphere.thot.akka.chat.client.command.ChatCommandProtocol.ROOM</protocol> <!-- Command protocol enumerated value -->
      <processor></processor> <!-- This command has no pre-defined command processor, it will be handled by a message -->
      <name>room</name>
      <description>Command used to manipulate a room.</description>
      <aliases></aliases>
      <parameters>
        <parameter>
          <name>list</name>
          <description>Lists the avaialble rooms.</description>
          <tag>-list</tag>
          <regexp>(-list)</regexp>
          <type>String</type>
        </parameter>
        <parameter>
          <name>create</name>
          <description>Creates a new room given its name.</description>
          <tag>-create</tag>
          <regexp>(-create=)\s*+([a-zA-Z_]++\*?)</regexp>
          <type>String</type>
        </parameter>
        <parameter>
          <name>delete</name>
          <description>Deletes a room given its name.</description>
          <tag>-delete</tag>
          <regexp>(-delete=)\s*+([a-zA-Z]++\*?)</regexp>
          <type>String</type>
        </parameter>
        <parameter>
          <name>join</name>
          <description>Joins a room given its name.</description>
          <tag>-join</tag>
          <regexp>(-join=)\s*+([a-zA-Z]++\*?)</regexp>
          <type>String</type>
        </parameter>
        <parameter>
          <name>leave</name>
          <description>Leaves a room given its name.</description>
          <tag>-leave</tag>
          <regexp>(-leave=)\s*+([a-zA-Z]++\*?)</regexp>
          <type>String</type>
        </parameter>
      </parameters>
    </command>

  </commands>

